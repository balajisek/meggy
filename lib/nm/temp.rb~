require 'optparse'
if !ARGV.empty?
OptionParser.new do |o|
  o.on('-d') { |b| $quiet = b }
  o.on('-i') { |b| $interactive = b }
  o.on('-f FILENAME') { |filename| $filename = filename }
  o.on('-h') { puts o; exit }
  o.parse!
end
else
	puts "Help"
end
p :quiet => $quiet, :interactive => $interactive, :filename => $filename

